# ==============================================================================
# RPC Endpoints Configuration
# ==============================================================================

# Sepolia Testnet RPC
# Get your API key from https://www.alchemy.com/ or https://infura.io/
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Ethereum Mainnet RPC (Production)
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Alternative Networks
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# BSC_RPC_URL=https://bsc-dataseed.binance.org/
# ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ==============================================================================
# Wallet Configuration
# ==============================================================================

# Deployer Private Key (without 0x prefix)
# ⚠️ SECURITY WARNING: NEVER commit your actual private key to version control
# Use a dedicated wallet for testing/deployment
# Generate: openssl rand -hex 32
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Pauser Address (optional - for emergency pause functionality)
# Address that has permission to pause contract operations
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Owner Address (optional - contract owner for production deployments)
OWNER_ADDRESS=0x0000000000000000000000000000000000000000

# Multi-sig Wallet Address (recommended for production)
# MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000

# ==============================================================================
# API Keys and Services
# ==============================================================================

# Etherscan API Key
# Get your API key from https://etherscan.io/myapikey
# Used for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key
# POLYGONSCAN_API_KEY=your_polygonscan_api_key

# BSCscan API Key
# BSCSCAN_API_KEY=your_bscscan_api_key

# CoinMarketCap API Key (for gas price in USD)
# Get your API key from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ==============================================================================
# Gas and Performance Configuration
# ==============================================================================

# Gas Reporting
# Set to true to enable detailed gas reporting in tests
REPORT_GAS=false

# Gas Price (in Gwei) - leave empty for automatic
# GAS_PRICE=20

# Gas Limit - leave empty for automatic
# GAS_LIMIT=8000000

# Optimizer Settings (configured in hardhat.config.cjs)
# OPTIMIZER_RUNS=200

# ==============================================================================
# Security Configuration
# ==============================================================================

# Enable Security Checks
ENABLE_SECURITY_CHECKS=true

# DoS Protection Settings
# Maximum gas per transaction to prevent DoS attacks
MAX_GAS_PER_TX=8000000

# Rate Limiting (if implemented in contracts)
# MAX_REQUESTS_PER_BLOCK=10

# Pause Contract on Deployment (for testing)
# PAUSE_ON_DEPLOY=false

# ==============================================================================
# Testing Configuration
# ==============================================================================

# Test Network
TEST_NETWORK=hardhat

# Coverage Threshold
COVERAGE_THRESHOLD=80

# Test Timeout (milliseconds)
TEST_TIMEOUT=120000

# Enable Verbose Logging
VERBOSE=false

# ==============================================================================
# CI/CD Configuration
# ==============================================================================

# CI Environment Detection
# CI=true (automatically set by CI/CD platforms)

# Codecov Token (for coverage reporting)
# CODECOV_TOKEN=your_codecov_token_here

# GitHub Token (for automated releases)
# GITHUB_TOKEN=your_github_token

# ==============================================================================
# Deployment Configuration
# ==============================================================================

# Deployment Network
DEPLOY_NETWORK=sepolia

# Auto-verify after deployment
AUTO_VERIFY=true

# Settlement Period (days) - contract parameter
SETTLEMENT_PERIOD=30

# Initial Market Prices (in Wei)
# WHEAT_INITIAL_PRICE=1000000000000000000
# RICE_INITIAL_PRICE=1000000000000000000
# CORN_INITIAL_PRICE=1000000000000000000
# SOYBEANS_INITIAL_PRICE=1000000000000000000
# COTTON_INITIAL_PRICE=1000000000000000000

# ==============================================================================
# Monitoring and Alerts
# ==============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn

# Telegram Bot Token (for deployment notifications)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id

# Discord Webhook (for notifications)
# DISCORD_WEBHOOK_URL=your_discord_webhook_url

# ==============================================================================
# Development Configuration
# ==============================================================================

# Development Mode
NODE_ENV=development

# Debug Mode
DEBUG=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================================================
# Frontend Configuration (if applicable)
# ==============================================================================

# Frontend URL
# FRONTEND_URL=http://localhost:3000

# API Endpoint
# API_URL=http://localhost:8545

# WebSocket Endpoint
# WS_URL=ws://localhost:8545

# ==============================================================================
# Notes
# ==============================================================================

# Security Best Practices:
# 1. Never commit .env file to version control
# 2. Use different keys for testnet and mainnet
# 3. Rotate keys regularly
# 4. Use hardware wallets for production
# 5. Enable 2FA on all accounts
# 6. Monitor contract activity
# 7. Keep backups of configuration

# Performance Tips:
# 1. Use appropriate OPTIMIZER_RUNS value
# 2. Monitor gas costs regularly
# 3. Implement gas-efficient patterns
# 4. Test on mainnet fork before deployment
# 5. Use gas profiling tools

# Testing Tips:
# 1. Run full test suite before deployment
# 2. Check coverage thresholds
# 3. Test edge cases thoroughly
# 4. Verify on testnet first
# 5. Use CI/CD for automated testing
